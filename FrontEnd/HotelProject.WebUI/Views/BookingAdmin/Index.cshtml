@model List<ResultBookingDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="card-title">
                <h4>Rezervasyonlar</h4>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Misafir</th>
                            <th>Giriş Tarihi</th>
                            <th>Çıkış Tarihi</th>
                            <th>Durum</th>
                            <th>Onayla</th>
                            <th>İptal Et</th>
                            <th>Beklet</th>
                            <th>Güncelle</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var booking in Model){
                            count++;
                            <tr>
                            <th>@count</th>
                            <td>@booking.Name</td>
                            <td>@(((DateTime)booking.Checkin).ToString("dd-MMM-yyyy"))</td>
                            <td>@(((DateTime)booking.CheckOut).ToString("dd-MMM-yyyy"))</td>
                            <td class="color-primary">@booking.Status</td>
                                <td><a href="/BookingAdmin/ApprovedReservation/@booking.Id" class="btn btn-outline-primary">Onayla</a></td>
                            <td><a href="#" class="btn btn-outline-danger">İptal Et</a></td>
                            <td><a href="#" class="btn btn-outline-warning">Beklet</a></td>
                            <td><a href="#" class="btn btn-outline-warning">Güncelle</a></td>
                            <td><a href="#" class="btn btn-outline-warning">Detaylar</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

