@model List<ResultRoomDto>

@{
    ViewBag.Title = "Çalışanlarımız";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Oda Numarası</th>
        <th>Başlık</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var room in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@room.RoomNumber</td>
            <td>@room.Title</td>
            <td><a href="/AdminRoom/DeleteRoom/@room.Id" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
            <td><a href="/AdminRoom/UpdateRoom/@room.Id" class="btn mb-1 btn-rounded btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/AdminRoom/AddRoom/" class="btn mb-1 btn-rounded btn-outline-info">Yeni Oda Girişi</a>

